{
    "name": "epistemic-audit-engine-root",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "export PYTHONPATH=$PWD/backend && .venv/bin/python -m uvicorn app:app --host 127.0.0.1 --port 8000",
        "dev:frontend": "npm run dev --prefix frontend"
    },
    "devDependencies": {
        "concurrently": "^9.2.1"
    }
}